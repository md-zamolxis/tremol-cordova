<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myColor2">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btnRead"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/readPLUbtn"/>

                <Button
                    android:id="@+id/btnFirstAvailable"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/readFirstAvailableBtn"/>

            </LinearLayout>

            <!-- PLU Number -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/PLUnumber"
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                android:id="@+id/textView" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/txtPLUnumber" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#002200" />

            <!-- PLU Name -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/PLUname"
                android:layout_gravity="center"
                android:id="@+id/textView1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/txtPLUname" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#002200" />

            <!-- PLU Price -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/PLUprice"
                android:layout_gravity="center"
                android:id="@+id/textView2" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:id="@+id/txtPLUprice" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#002200" />

            <!-- PLU VAT Class -->


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/PLUVAT"
                android:layout_gravity="center"
                android:id="@+id/textView3" />

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/txtPLUvat" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#002200" />

            <!--Article Department number-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/DepNum"
                android:layout_gravity="center"
                android:id="@+id/textView4" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/txtArtDepNo" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#002200" />

            <!--Article Measure Unit -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/MeasureUnit"
                android:layout_gravity="center"
                android:id="@+id/textView5" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/txtMeasureUnit" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#002200" />

            <!--Article Additional Name -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/AdditionalName"
                android:layout_gravity="center"
                android:id="@+id/textView6" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/txtAdditionalName" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#002200" />

            <!--Article Measure Unit -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/AvailableQty"
                android:layout_gravity="center"
                android:id="@+id/textView7" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:id="@+id/txtAvailableQty" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#002200" />

            <Button
                android:id="@+id/btnProgram"
                android:layout_marginTop="15dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/programPLUbtn"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>